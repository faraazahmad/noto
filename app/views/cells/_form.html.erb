<%= form_with(model: cell, url: url) do |form| %>
  <% if cell.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cell.errors.count, "error") %> prohibited this cell from being saved:</h2>

      <ul>
        <% cell.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :cell_type, style: "display: block" %>
    <%= form.select :cell_type, CellType.all.collect { |g| [g.label, g.value] }, include_blank: false %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
